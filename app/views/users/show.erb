<div class='container'>
  <h1>Profile info for <%= @user.username %>:</h1>
  <h6><a href="/users/<%= @user.id %>/edit">Edit profile</a></h6>
  <h2>Surveys created:</h2>
  <div class="list-group">
    <% @user.surveys.each do |survey| %>
      <a href=<%= "/surveys/#{survey.id}" %> class="list-group-item"><%= survey.name %> <%= "(created #{survey.nice_date})" %></a>
    <% end %>
  </div>
  <h2>Polls taken:</h2>
  <div class="list-group">
    <% @user.polls.each do |poll| %>
      <a href=<%= "/polls/#{poll.id}" %> class="list-group-item"><%= poll.survey_name %> <%= "(taken #{poll.nice_date})" %></a>
    <% end %>
  </div>
</div>